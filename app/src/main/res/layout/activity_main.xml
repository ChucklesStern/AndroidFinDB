<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.androidfindbhw.MainActivity">

<LinearLayout
    android:layout_width="368dp"
    android:layout_height="495dp"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/createTransaction"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Create Transaction"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />

        <Button
            android:id="@+id/editTransaction"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Edit Transaction"
            android:layout_below="@+id/createTransaction"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />
        <Button
            android:id="@+id/deleteTransaction"
            android:layout_below="@id/editTransaction"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Delete Transaction"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />
        <Button
            android:id="@+id/getOneTransaction"
            android:layout_below="@id/deleteTransaction"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Get One Transaction"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />
        <Button
            android:id="@+id/getAllTransaction"
            android:layout_below="@id/getOneTransaction"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Get All Transactions"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>
</android.support.constraint.ConstraintLayout>
